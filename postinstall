#!/bin/bash

cd $HOME/code/.;

perl <<'END_OF_PERL' | crontab -
    print "# THIS FILE IS AUTOMATICALLY GENERATED. DO NOT EDIT DIRECTLY.\n";
    my $local_lib = `perl -I$ENV{HOME}/perl5/lib/perl5/ -Mlocal::lib=$ENV{HOME}/perl5/`;
    $local_lib =~ s/export (.+?);/$1/g;
    $local_lib =~ s/\$PATH/$ENV{PATH}/g;
    print "$local_lib\n";
    print "PLACK_ENV=deployment\n";
    print "\n";
    print `cat crontab`;
END_OF_PERL
echo installed crontab

if [ ! -f $HOME/perldocjp.db ]; then
    sqlite3 $HOME/perldocjp.db < sql/sqlite.sql
fi

